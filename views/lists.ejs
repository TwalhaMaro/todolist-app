<%-include("header") -%>

    <div class="box" id="heading">
        <h1><%=listTitle%></h1>
    </div>
    <div class="box" >
        <%newListIterms.forEach(function(iterm){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=iterm._id%>" onChange="this.form.submit()">
                    <p><%=iterm.name%></p>  
                </div>
                <input type="hidden" name="listName" value="<%=listTitle%>"></form>
            </form>
        <%})%>

        <form action="/" method="post" class="item">
            <input type="text" name="newiterm" placeholder="New Item" autocomplete="off"><br>
            <button type="submit" name="list" value=<%=listTitle%>> + </button>
        </form>

    </div> 
<%-include("footer") -%>
   

